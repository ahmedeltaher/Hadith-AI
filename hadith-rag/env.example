# Arabic Hadith RAG Pipeline Configuration
# Copy this to .env and modify as needed

# Ollama Server Settings
OLLAMA_BASE_URL=http://localhost:11434
EMBEDDING_MODEL=qwen3-embedding:4b
LLM_MODEL=qwen2.5:7b

# Qdrant Vector Store Settings  
# Leave QDRANT_URL empty for in-memory mode
QDRANT_URL=
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=hadith_collection

# OpenAI API (optional, for fallback/comparison)
# OPENAI_API_KEY=your_openai_api_key_here

# Retrieval Settings
SIMILARITY_TOP_K=5
SENTENCE_WINDOW_SIZE=3
TEMPERATURE=0.1
MAX_TOKENS=1000

# Document Processing Settings
CHUNK_SIZE=512
CHUNK_OVERLAP=50
SEMANTIC_SPLITTER_BREAKPOINT_PERCENTILE_THRESHOLD=95